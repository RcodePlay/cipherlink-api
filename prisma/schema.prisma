datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id
  pubkey    String
  devices   Device[]
}

model Device {
  id        String   @id
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  messages  Message[] @relation("RecipientMessages")
  sent      Message[] @relation("SenderMessages")
}

model Message {
  id         String   @id @default(cuid())
  fromId     String
  toId       String
  ciphertext String
  sentAt     DateTime @default(now())
  read       Boolean  @default(false)

  from Device @relation("SenderMessages", fields: [fromId], references: [id])
  to   Device @relation("RecipientMessages", fields: [toId], references: [id])
}
